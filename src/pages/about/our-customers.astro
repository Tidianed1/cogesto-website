---
// Our Customers page (French)
import NewHeader from '../../components/NewHeader.astro';
import NewFooter from '../../components/NewFooter.astro';
import SubNavigation from '../../components/SubNavigation.astro';
import VideoTestimonial from '../../components/VideoTestimonial.astro';
import { fr } from '../../content/fr';

// Sub-navigation items (French)
const subNavItems = [
  { text: fr.nav.about, href: '/about/overview/' },
  { text: fr.nav.ourStory, href: '/about/our-story/' },
  { text: fr.nav.ourPeople, href: '/about/our-people/' },
  { text: fr.nav.ourValues, href: '/about/our-values/' },
  { text: fr.nav.ourCulture, href: '/about/our-culture/' },
  { text: fr.nav.ourCustomers, href: '/about/our-customers/', isActive: true },
  { text: fr.nav.ourLocations, href: '/about/our-locations/' },
];

---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Nos clients - Cogesto Consulting</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Manrope:300,400,500,600,700,800&amp;display=swap">
    <link rel="stylesheet" href="/styles/screen.css" media="screen">
    <link rel="stylesheet" href="/styles/print.css" media="print">
    <link rel="stylesheet" href="/styles/inline.css">
  </head>
  <body id="top-of-page" class="show-cart-toggle" data-cookiepro-enabled="true" lang="fr">

<!-- Google Tag Manager (noscript) -->
<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-5XN52HZ"
                  height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
<!-- End Google Tag Manager (noscript) -->

<div class="skip">
    <a class="btn btn-skip" tabindex="0" href="#content">Passer au contenu principal</a>
</div>

<header>
  <NewHeader />
</header>

<main class="content start" id="content">
  <div class="our-customers-page-wrapper">
    <!-- Hero Section -->
    <div id="our-customers-hero" class="hero-homepage-cobalt-template__container hero-block">
      <div class="hero-homepage-cobalt-template__section_flex_container">
        <div class="hero-homepage-cobalt-template__summary">
          <h1 class="hero-homepage-cobalt__title">{fr.ourCustomers.hero.title}</h1>
          <div class="hero-homepage-cobalt__introduction">
            <p>{fr.ourCustomers.hero.description}</p>
          </div>
        </div>
        <div class="hero-homepage-cobalt-template__image" style="background-image: url(https://www.woodmac.com/contentassets/customers-hero.jpg); background-position: center; background-size: cover;"></div>
      </div>
    </div>

    <!-- Sub-navigation -->
    <SubNavigation items={subNavItems} />

    <!-- Customer Testimonials -->
    {fr.ourCustomers.testimonials.map((testimonial, index) => (
      <VideoTestimonial
        company={testimonial.company}
        quote={testimonial.quote}
        description={testimonial.description}
        speaker={testimonial.speaker}
        video={testimonial.video || { thumbnail: `https://www.woodmac.com/contentassets/testimonial-${index}.jpg` }}
        layout={index % 2 === 0 ? 'left' : 'right'}
      />
    ))}
  </div>
</main>

<footer>
  <NewFooter />
</footer>

<script is:inline>
  // Navigation script - same as other pages
  (function() {
    'use strict';
    function toggleElement(targetId, button) {
      const target = document.querySelector(targetId);
      if (!target) return;
      const isExpanded = button.getAttribute('aria-expanded') === 'true';
      const newState = !isExpanded;
      button.setAttribute('aria-expanded', newState);
      if (newState) {
        target.classList.add('is-open');
        target.style.visibility = 'visible';
        target.style.clip = 'auto';
      } else {
        target.classList.remove('is-open', 'is-active');
        target.style.visibility = 'hidden';
        target.style.clip = 'rect(0 0 0 0)';
      }
    }
    function init() {
      document.addEventListener('click', function(e) {
        const toggleBtn = e.target.closest('.js-toggle, .js-toggle-local, .js-toggle__header-group, .desktop-nav[data-target]');
        if (toggleBtn) {
          e.preventDefault();
          e.stopPropagation();
          const targetId = toggleBtn.getAttribute('data-target') || toggleBtn.getAttribute('href') || toggleBtn.getAttribute('aria-controls');
          if (targetId) toggleElement(targetId, toggleBtn);
        }
      });
    }
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', init);
    } else {
      init();
    }
  })();
</script>

<style>
  .our-customers-page-wrapper {
    width: 100%;
  }

  main.content.start {
    margin-top: 0;
    padding-top: 0;
  }

  #our-customers-hero {
    min-height: 500px;
    height: 600px;
    position: relative;
    overflow: hidden;
    margin: 0;
    padding: 0;
    width: 100%;
    max-width: 100%;
    background: #0000ff;
  }

  @media (max-width: 47.99em) {
    #our-customers-hero {
      height: auto;
      min-height: 400px;
    }
  }

  #our-customers-hero .hero-homepage-cobalt-template__section_flex_container {
    display: flex;
    height: 100%;
    position: relative;
    width: 100%;
    max-width: 100%;
    margin: 0;
    padding: 0;
    gap: 0;
  }

  @media (max-width: 47.99em) {
    #our-customers-hero .hero-homepage-cobalt-template__section_flex_container {
      flex-direction: column;
    }
  }

  #our-customers-hero .hero-homepage-cobalt-template__summary {
    flex: 0 0 55%;
    background: #0000ff;
    color: white;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 48px 80px;
    z-index: 2;
    position: relative;
  }

  @media (min-width: 75em) {
    #our-customers-hero .hero-homepage-cobalt-template__summary {
      padding: 64px 120px;
    }
  }

  @media (max-width: 47.99em) {
    #our-customers-hero .hero-homepage-cobalt-template__summary {
      flex: 1 1 auto;
      padding: 40px 24px;
    }
  }

  #our-customers-hero .hero-homepage-cobalt-template__image {
    flex: 0 0 45%;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    position: relative;
    clip-path: polygon(15% 0, 100% 0, 100% 100%, 0% 100%);
    background-color: #0000ff;
    overflow: hidden;
    margin: 0;
    padding: 0;
  }

  @media (max-width: 47.99em) {
    #our-customers-hero .hero-homepage-cobalt-template__image {
      flex: 1 1 auto;
      min-height: 300px;
      clip-path: none;
    }
  }

  #our-customers-hero .hero-homepage-cobalt__title {
    color: white;
    font-size: 2.5rem;
    line-height: 1.1;
    font-weight: 700;
    margin-bottom: 0;
  }

  @media (min-width: 48em) {
    #our-customers-hero .hero-homepage-cobalt__title {
      font-size: 3rem;
      line-height: 1.15;
    }
  }

  @media (min-width: 60em) {
    #our-customers-hero .hero-homepage-cobalt__title {
      font-size: 4rem;
      line-height: 1.2;
    }
  }

  #our-customers-hero .hero-homepage-cobalt__introduction {
    color: white;
    font-size: 1.125rem;
    font-weight: 400;
    line-height: 1.7;
    padding-top: 1.5rem;
    padding-bottom: 1.5rem;
    margin-top: 0;
  }

  @media (min-width: 60em) {
    #our-customers-hero .hero-homepage-cobalt__introduction {
      font-size: 1.25rem;
      padding-top: 2rem;
      padding-bottom: 2rem;
    }
  }
</style>

  </body>
</html>

