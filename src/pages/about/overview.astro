---
// About page - Overview (French) - REFACTORED
import BaseLayout from '../../layouts/BaseLayout.astro';
import NewHeader from '../../components/NewHeader.astro';
import NewFooter from '../../components/NewFooter.astro';
import AboutHero from '../../components/AboutHero.astro';
import SubNavigation from '../../components/SubNavigation.astro';
import StatsSection from '../../components/StatsSection.astro';
import BodyCopyImage from '../../components/BodyCopyImage.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import { fr } from '../../content/fr';
import { footerData } from '../../content/footer';

// Sub-navigation items (French)
const subNavItems = [
  { text: fr.nav.about, href: '/about/overview/' },
  { text: fr.nav.ourStory, href: '/about/our-story/' },
  { text: fr.nav.ourPeople, href: '/about/our-people/' },
  { text: fr.nav.ourValues, href: '/about/our-values/' },
  { text: fr.nav.ourCulture, href: '/about/our-culture/' },
  { text: fr.nav.ourCustomers, href: '/about/our-customers/' },
  { text: fr.nav.ourLocations, href: '/about/our-locations/' },
];

// Breadcrumb items
const breadcrumbItems = [
  { text: "Home", href: "/" },
  { text: "About Us", href: "/about/overview/" },
];

// Stats data (French)
const statsData = fr.about.stats.stats;
---

<BaseLayout title="À propos - Cogesto Consulting">

  <header id="menu-header">
    <NewHeader />
  </header>

  <main class="content start" id="content">
    
    <Breadcrumbs items={breadcrumbItems} />

    <!-- Hero Section -->
    <AboutHero
      title={fr.about.hero.title}
      description={fr.about.hero.description}
      imageUrl="/assets/cogesto-asset/5627872663_265b0e5e0b_o.jpg"
      imageAlt="Équipe Cogesto en réunion"
      ctaText={fr.about.hero.cta}
      ctaHref="/about/contact-us/"
    />

    <!-- Sub-navigation -->
    <SubNavigation items={subNavItems} currentPage={Astro.url.pathname} />

    <!-- Stats Section -->
    <StatsSection 
      stats={statsData}
      intro={fr.about.stats.intro}
    />

    <!-- Who we are Section -->
    <BodyCopyImage
      title={fr.about.whoWeAre.title}
      description={fr.about.whoWeAre.paragraphs.join('<br><br>')}
      imageUrl="/assets/cogesto-asset/american-public-power-association-513dBrMJ_5w-unsplash.jpg"
      imageAlt="Équipe Cogesto Consulting"
      reverseLayout={true}
      buttonText={fr.about.whoWeAre.cta}
      buttonHref="/about/our-story/"
      buttonClass="btn--primary"
    />

    <!-- Why Cogesto Section -->
    <BodyCopyImage
      title={fr.about.whyCogesto.title}
      description={fr.about.whyCogesto.paragraphs.join('<br><br>')}
      imageUrl="/assets/cogesto-asset/dl.beatsnoop.com-3000-4IKatlkwP1.jpg"
      imageAlt="Équipe diversifiée de professionnels collaborant"
      reverseLayout={false}
      buttonText={fr.about.whyCogesto.cta}
      buttonHref="/about/our-customers/"
      buttonClass="btn--primary"
    />

    <!-- Our culture Section -->
    <BodyCopyImage
      title={fr.about.ourCulture.title}
      description={fr.about.ourCulture.paragraphs.join('<br><br>')}
      imageUrl="/assets/cogesto-asset/dl.beatsnoop.com-3000-4uY50CJ9sH.jpg"
      imageAlt="Membres de l'équipe collaborant en réunion"
      reverseLayout={true}
      buttonText={fr.cta.meetOurPeople}
      buttonHref="/about/our-people/"
      buttonClass="btn--primary"
    />

  </main>

  <footer>
    <NewFooter {...footerData} />
  </footer>

</BaseLayout>