---
// Our Story page (French) - REFACTORED
import BaseLayout from '../../layouts/BaseLayout.astro';
import NewHeader from '../../components/NewHeader.astro';
import NewFooter from '../../components/NewFooter.astro';
import SubNavigation from '../../components/SubNavigation.astro';
import QuoteSection from '../../components/QuoteSection.astro';
import TextOnlySection from '../../components/TextOnlySection.astro';
import BodyCopyImage from '../../components/BodyCopyImage.astro';
import HeroMultiTemplate from '../../components/HeroMultiTemplate.astro';
import { fr } from '../../content/fr';
import { footerData } from '../../content/footer';

// Sub-navigation items (French)
const subNavItems = [
  { text: fr.nav.about, href: '/about/overview/' },
  { text: fr.nav.ourStory, href: '/about/our-story/' },
  { text: fr.nav.ourPeople, href: '/about/our-people/' },
  { text: fr.nav.ourValues, href: '/about/our-values/' },
  { text: fr.nav.ourCulture, href: '/about/our-culture/' },
  { text: fr.nav.ourCustomers, href: '/about/our-customers/' },
  { text: fr.nav.ourLocations, href: '/about/our-locations/' },
];
---

<BaseLayout title="Notre histoire - Cogesto Consulting">

  <NewHeader />

  <main class="content start">
    
    <HeroMultiTemplate
      title={fr.ourStory.hero.title}
      subtitle={fr.ourStory.hero.description}
      imageUrl="/assets/cogesto-asset/Fresque_ongoing_buidling_ architectural.jpg"
      ctaText={fr.ourStory.hero.cta}
      ctaHref="/contact/"
      backgroundColor="primary-color"
    />

    <SubNavigation items={subNavItems} currentPage={Astro.url.pathname} />

    <TextOnlySection
      title={fr.ourStory.ourPurpose.title}
      content={fr.ourStory.ourPurpose.paragraphs.map(p => `<p>${p}</p>`).join('')}
    />

    <QuoteSection
      quote={fr.ourStory.quote.text}
      attribution={fr.ourStory.quote.attribution}
      image={{
        src: "/assets/cogesto-asset/Cogesto_conference_ 3 guys.jpg",
        alt: "Présentation en réunion"
      }}
    />

    <BodyCopyImage
      title={fr.ourStory.foundations.title}
      description={fr.ourStory.foundations.paragraphs.map(p => `<p>${p}</p>`).join('')}
      imageUrl="/assets/cogesto-asset/Two_woman_talking.jpg"
      imageAlt="Réunion d'équipe"
      reverseLayout={true}
      buttonText=""
      buttonHref=""
    />

    <BodyCopyImage
      title={fr.ourStory.growth.title}
      description={fr.ourStory.growth.paragraphs.map(p => `<p>${p}</p>`).join('')}
      imageUrl="/assets/cogesto-asset/Agricultural_field.jpg"
      imageAlt="Discussion d'équipe"
      reverseLayout={false}
      buttonText=""
      buttonHref=""
    />

    <BodyCopyImage
      title={fr.ourStory.partnerships.title}
      description={fr.ourStory.partnerships.paragraphs.map(p => `<p>${p}</p>`).join('')}
      imageUrl="/assets/cogesto-asset/hands-braiding-hair.jpg"
      imageAlt="Partenariats"
      reverseLayout={true}
      buttonText=""
      buttonHref=""
    />

  </main>

  <NewFooter {...footerData} />

</BaseLayout>