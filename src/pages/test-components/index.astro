            items={[{id: "1", tabText: "Gold", title: "Gold", description: "Gold description", imageUrl: "/assets/cogesto-asset/Solar-panal.jpg", imageAlt: "Gold", highlightLinks: []}]}
        />
    </div>

    <hr class="push-double--ends" />

    <!-- 4. Cards & Grids -->
    <h2 class="text-center push-bottom bg-light-grey soft">4. Cards, Grids & Stats</h2>

    <div class="push-bottom--double">
        <h3 class="text-center">CardGrid.astro (Services)</h3>
        <CardGrid 
            heading="Card Grid - Services"
            items={cardGridItems}
        />
    </div>

    <div class="push-bottom--double">
        <h3 class="text-center">BlogArticleShowcase.astro</h3>
        <BlogArticleShowcase 
            highlightedArticle={highlightedArticle}
            secondaryArticles={secondaryArticles}
        />
    </div>

    <div class="push-bottom--double">
        <h3 class="text-center">RelatedContent.astro</h3>
        <RelatedContent 
            title="Related Content Grid"
            items={relatedItems}
        />
    </div>

    <div class="push-bottom--double">
        <h3 class="text-center">StatsBlock.astro</h3>
        <StatsBlock 
            title="Key Statistics"
            description="Highlighting key performance indicators."
            stats={statsItems}
        />
    </div>

    <div class="push-bottom--double">
        <h3 class="text-center">BenefitsBlock.astro</h3>
        <BenefitsBlock 
            title="Key Benefits"
            items={benefitsItems}
        />
    </div>

    <div class="push-bottom--double">
        <h3 class="text-center">AdvantageItem.astro</h3>
        <div class="flex justify-center gap-8">
            <AdvantageItem 
                heading="Expertise"
                text="Deep industry knowledge."
            />
            <AdvantageItem 
                heading="Innovation"
                text="Cutting-edge solutions."
            />
        </div>
    </div>

    <div class="push-bottom--double">
        <h3 class="text-center">MasonryGrid.astro</h3>
        <MasonryGrid
            items={[{type: "regular", label: "Label", title: "Title", description: "Desc", href: "#", imageSrc: "/assets/cogesto-asset/Solar-panal.jpg", imageAlt: "Alt"}]}
        />
    </div>

    <div class="push-bottom--double">
        <h3 class="text-center">ArticleCard.astro</h3>
        <div class="col small-4">
            <ArticleCard
                title="Article Title"
                category="News"
                href="#"
                imageUrl="/assets/cogesto-asset/women_on_ a computer.jpg"
            />
        </div>
    </div>

    <div class="push-bottom--double">
        <h3 class="text-center">NewsCard.astro</h3>
        <div class="col small-4">
            <NewsCard
                title="News Title"
                date="2023-10-27"
                href="#"
                image="/assets/cogesto-asset/women_on_ a computer.jpg"
            />
        </div>
    </div>

    <hr class="push-double--ends" />

    <!-- 5. CTAs & Others -->
    <h2 class="text-center push-bottom bg-light-grey soft">5. CTAs & Miscellaneous</h2>

    <div class="push-bottom--double">
        <h3 class="text-center">CardImageText.astro (Video/CTA)</h3>
        <CardImageText
            title="Card Image Text (CTA)"
            description="<p>Often used for final Call to Actions at the bottom of pages. Supports video style layout.</p>"
            buttonText="Contact Us"
            buttonHref="#"
            imageUrl="/assets/cogesto-asset/Professionla_women-holding tablet.jpg"
            imageAlt="Contact"
            backgroundColorClass="bg-primary-color"
        />
    </div>

    <div class="push-bottom--double">
        <h3 class="text-center">CardQuote.astro</h3>
