---

<BaseLayout title="Component Test Page">
  <div class="soft-double--top">
    <h1 class="text-center">Component Test Page</h1>
    <p class="text-center push-bottom--double">Validation area for new components.</p>

    <!-- ServicesCarousel Test -->
    <div class="push-bottom--double">
        <h2 class="text-center push-bottom">ServicesCarousel.astro</h2>
        <ServicesCarousel 
            title="Discover our energy consulting solutions"
            introText="<p>We don't believe in a one-size-fits-all approach...</p>"
            slides={servicesCarouselSlides}
        />
    </div>

    <!-- BlogArticleShowcase Test -->
    <div class="push-bottom--double">
        <h2 class="text-center push-bottom">BlogArticleShowcase.astro</h2>
        <BlogArticleShowcase 
            highlightedArticle={highlightedArticle}
            secondaryArticles={secondaryArticles}
        />
    </div>

    <!-- MasonryGrid Test -->
    <div class="push-bottom--double">
        <h2 class="text-center push-bottom">MasonryGrid.astro</h2>
        <MasonryGrid items={masonryItems} />
    </div>

    <!-- TabsTextMedia Test -->
    <div class="push-bottom--double">
        <h2 class="text-center push-bottom">TabsTextMedia.astro</h2>
        <TabsTextMedia 
            heading="Nos industries"
            tabs={tabsTextMediaData}
        />
    </div>

    <!-- LeadershipTeamSection Test -->
    <div class="push-bottom--double">
        <h2 class="text-center push-bottom">LeadershipTeamSection.astro</h2>
        <LeadershipTeamSection 
            title="Leadership team"
            members={leadershipTeam}
        />
    </div>

    <!-- CommoditySelector Test -->
    <div class="push-bottom--double">
        <h2 class="text-center push-bottom">CommoditySelector.astro</h2>
        <CommoditySelector 
            title="Commodities coverage"
            items={commodityItems}
        />
    </div>

    <!-- BenefitsBlock Test -->
    <div class="push-bottom--double">
        <h2 class="text-center push-bottom">BenefitsBlock.astro</h2>
        <BenefitsBlock 
            title="CCUS in numbers"
            description="Despite significant growth there's still an order-of-magnitude difference between planned capacity and 1.5-degree alignment"
            items={benefitsItems}
        />
    </div>

    <!-- RelatedContent Test (Mixed) -->
    <div class="push-bottom--double">
        <h2 class="text-center push-bottom">RelatedContent.astro (Mixed Layout)</h2>
        <RelatedContent 
            title="Related content"
            items={relatedItemsMixed}
        />
