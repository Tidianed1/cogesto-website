---
import BaseLayout from '../layouts/BaseLayout.astro';
import NewHeader from '../components/NewHeader.astro';
import NewFooter from '../components/NewFooter.astro';
import { footerData } from '../content/footer';
import HomepageVideoHero from '../components/HomepageVideoHero.astro';
import BodyCopyImage from '../components/BodyCopyImage.astro';
import BlogArticleShowcase from '../components/BlogArticleShowcase.astro';
import StatsBlock from '../components/StatsBlock.astro';
import FullWidthCta from '../components/FullWidthCta.astro';
import CardImageText from '../components/CardImageText.astro';

const highlightedInsight = {
    title: "Impact de la ZLECAf sur les industries locales",
    badge: "Stratégie",
    date: "10 Déc 2025",
    href: "/insights/zlecaf",
    imageSrc: "/assets/cogesto-asset/Fresque_ongoing_buidling_ architectural.jpg",
    imageAlt: "ZLECAf",
    excerpt: "Comment l'accord de libre-échange redessine la carte industrielle africaine et ouvre de nouvelles opportunités pour les champions nationaux.",
    format: "Dossier Stratégique"
};

const secondaryInsights = [
    {
        title: "Transition Énergétique : Le défi du contenu local",
        badge: "Énergie",
        date: "28 Nov 2025",
        href: "/insights/transition-energetique",
        imageSrc: "/assets/cogesto-asset/Solar-panal.jpg",
        format: "Analyse"
    },
    {
        title: "Digitalisation des services financiers en Afrique",
        badge: "Finance",
        date: "15 Nov 2025",
        href: "/insights/finance-digitale",
        imageSrc: "/assets/cogesto-asset/women_on_ a computer.jpg",
        format: "Article"
    }
];

const stats = [
  { heading: "15+", text: "Années d'expérience en conseil." },
  { heading: "3", text: "Bureaux (Dakar, Maroc, Canada)." },
  { heading: "50+", text: "Projets structurants accompagnés." }
];
---
<BaseLayout title="Cogesto Consulting - Excellence & Performance">
  
  <NewHeader theme="transparent" />

  <main>
    <HomepageVideoHero>
        <h1 class="hero-video__title">Cap sur l'Excellence : Votre Partenaire en Conseil Stratégique</h1>
        <p class="hero-video__subtitle">
          Naviguez avec confiance vers vos objectifs. Nos expertises et notre accompagnement sur mesure vous guident à travers les défis complexes, propulsant votre entreprise vers de nouveaux horizons.
        </p>
        <a href="/about/overview/" class="btn btn--primary"
          >En savoir plus</a
        >
    </HomepageVideoHero>
    
    <div class="content start homepage-gradients-wrapper">
      
      <!-- Intro: Vision -->
      <BodyCopyImage
        title="Accompagner les Champions de Demain"
        description="<p>Cogesto Consulting est né d'une conviction : l'Afrique a besoin d'un conseil d'excellence, ancré dans les réalités locales mais aux standards internationaux.</p><p>Nous accompagnons les entreprises publiques, les grands groupes privés et les institutions dans leurs transformations les plus critiques.</p>"
        imageUrl="/assets/cogesto-asset/cogesto-asset/picture_cogesto/ptreseidnt%20cogesto.jpg"
        imageAlt="Président Cogesto"
        buttonText="Qui sommes-nous ?"
        buttonHref="/about/overview/"
      />

      <!-- Insights Showcase -->
      <BlogArticleShowcase
        title="Publications Récentes"
        subtitle="Analyses et Perspectives"
        highlightedArticle={highlightedInsight}
        secondaryArticles={secondaryInsights}
        tabs={[
            { id: 'all', label: 'Tous' },
            { id: 'strategie', label: 'Stratégie' },
            { id: 'energie', label: 'Énergie' },
            { id: 'finance', label: 'Finance' }
        ]}
        seeMoreLink="/publications"
        seeMoreText="Toutes nos publications"
      />

      <!-- Service Deep Dives (Alternating) -->
      <BodyCopyImage
        title="Stratégie & Opérations"
        description="<p>Anticiper les ruptures et optimiser la performance. Nous aidons les dirigeants à définir des caps clairs et à aligner leur organisation pour l'exécution.</p>"
        imageUrl="/assets/cogesto-asset/Two_woman_talking.jpg"
        imageAlt="Stratégie"
        buttonText="Découvrir"
        buttonHref="/expertises/strategie"
      />

      <BodyCopyImage
        title="Finance & Investissement"
        description="<p>Sécuriser la croissance et la rentabilité. De l'ingénierie financière à l'optimisation du BFR, nous transformons la fonction finance en partenaire stratégique.</p>"
        imageUrl="/assets/cogesto-asset/Professionla_women-holding tablet.jpg"
        imageAlt="Finance"
        reverseLayout={true}
        buttonText="Découvrir"
        buttonHref="/expertises/corporate-finance"
      />

      <BodyCopyImage
        title="Digital & Innovation"
        description="<p>Faire de la technologie un levier de valeur. Nous vous accompagnons dans la digitalisation de vos processus et l'exploitation de vos données.</p>"
        imageUrl="/assets/cogesto-asset/li-zhang-K-DwbsTXliY-unsplash.webp"
        imageAlt="Digital"
        buttonText="Découvrir"
        buttonHref="/expertises/digital-technology"
      />

      <!-- Proof -->
      <StatsBlock
        title="Notre Impact"
        description="Des résultats concrets pour le développement du continent."
        stats={stats}
        backgroundColorClass="bg-primary-color"
      />

      <!-- Career / Culture CTA -->
      <FullWidthCta
        title="Rejoignez une équipe d'excellence."
        badgeText="Carrières"
        linkText="Voir les opportunités"
        linkHref="/careers/"
        backgroundColorClass="bg-core-branding-cobalt"
      />

      <CardImageText
        title="Un projet de transformation ?"
        description="<p>Discutons de vos enjeux. Nos associés sont à votre écoute pour définir ensemble la feuille de route de votre succès.</p>"
        buttonText="Contactez-nous"
        buttonHref="/contact/"
        imageUrl="/assets/cogesto-asset/black_women_smiling.jpg"
        imageAlt="Équipe Cogesto"
        videoPosition="right"
        backgroundColorClass="bg-primary-color"
      />

    </div>
  </main>

  <NewFooter {...footerData} />

</BaseLayout>
