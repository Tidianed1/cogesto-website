---
// Hero multi-template component - matches hero-multi-template structure from reference
export interface Props {
  title: string;
  introduction: string;
  ctaText?: string;
  ctaHref?: string;
  imageUrl: string;
  backgroundColor?: 'secondary-color' | 'cobalt';
}

const { 
  title, 
  introduction, 
  ctaText = "Get in touch", 
  ctaHref = "/contact/",
  imageUrl,
  backgroundColor = 'primary-color'
} = Astro.props;

const isDark = backgroundColor === 'primary-color' || backgroundColor === 'cobalt';
---

<div class={`hero-multi-template__container template_style_medium template_position_bottom bg-${backgroundColor}`}>
  <div class="wrap relative hero-multi-template__section_flex_container">
    <div class="hero-multi-template__flex_image_container justify-center">
      <div class="hero-multi-template__summary col">
        <h1 class={`hero-multi-template__title ${isDark ? 'white' : ''}`}>{title}</h1>
        <p class={`hero-multi-template__introduction ${isDark ? 'white' : ''}`}>
          {introduction}
        </p>
        {ctaText && (
          <div class="hero-multi-template__cta_button_group">
            <a href={ctaHref} class="btn btn--primary" role="button">
              {ctaText}
            </a>
          </div>
        )}
      </div>
    </div>
    <div class="hero-multi-template__image" style={`background-image: url(${imageUrl}); background-position: 50% 50%;`}>
      <div class="hero-multi-template__shape"></div>
    </div>
  </div>
</div>



