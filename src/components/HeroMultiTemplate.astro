---
// Hero multi-template component - matches hero-multi-template structure from reference
export interface Props {
  title: string;
  introduction: string;
  ctaText?: string;
  ctaHref?: string;
  imageUrl: string;
  backgroundColor?: 'secondary-color' | 'cobalt';
}

const { 
  title, 
  introduction, 
  ctaText = "Get in touch", 
  ctaHref = "/contact/",
  imageUrl,
  backgroundColor = 'secondary-color'
} = Astro.props;
---

<div class={`hero-multi-template__container template_style_medium template_position_bottom bg-${backgroundColor}`}>
  <div class="wrap relative hero-multi-template__section_flex_container">
    <div class="hero-multi-template__flex_image_container justify-center">
      <div class="hero-multi-template__summary col">
        <h1 class="hero-multi-template__title">{title}</h1>
        <p class="hero-multi-template__introduction">
          {introduction}
        </p>
        {ctaText && (
          <div class="hero-multi-template__cta_button_group">
            <a href={ctaHref} class="btn btn--primary" role="button">
              {ctaText}
            </a>
          </div>
        )}
      </div>
    </div>
    <div class="hero-multi-template__image" style={`background-image: url(${imageUrl}); background-position: 50% 50%;`}>
      <div class="hero-multi-template__shape"></div>
    </div>
  </div>
</div>

<style>
  /* Exact CSS from dev tools - hero-multi-template */
  .hero-multi-template__container {
    position: relative;
    overflow: hidden;
    width: 100%;
    min-height: 400px;
  }

  .hero-multi-template__container.bg-secondary-color {
    background-color: #0024ff;
  }

  .hero-multi-template__container.bg-cobalt {
    background-color: #0024ff;
  }

  .hero-multi-template__section_flex_container {
    display: flex;
    align-items: center;
    gap: 18px;
    min-height: 400px;
    position: relative;
  }

  @media (max-width: 61.99em) {
    .hero-multi-template__section_flex_container {
      flex-direction: column;
    }
  }

  .hero-multi-template__flex_image_container {
    flex-basis: 45%;
    display: flex;
    align-items: center;
    color: #010063;
    font-weight: 300;
    line-height: 24px;
    gap: 18px;
  }

  .hero-multi-template__flex_image_container.justify-center {
    justify-content: center;
  }

  @media (max-width: 61.99em) {
    .hero-multi-template__flex_image_container {
      flex-basis: 100%;
      padding: 48px 24px;
      width: 100%;
    }
  }

  .hero-multi-template__summary {
    width: 100%;
    z-index: 2;
  }

  .hero-multi-template__title {
    font-family: Manrope, sans-serif;
    font-size: 48px;
    font-weight: 700;
    line-height: 1.1;
    color: #ffffff;
    margin: 0 0 24px 0;
  }

  @media (max-width: 61.99em) {
    .hero-multi-template__title {
      font-size: 36px;
    }
  }

  .hero-multi-template__introduction {
    font-family: Manrope, sans-serif;
    font-size: 18px;
    font-weight: 300;
    line-height: 28px;
    color: #ffffff;
    margin: 0 0 32px 0;
  }

  @media (max-width: 61.99em) {
    .hero-multi-template__introduction {
      font-size: 16px;
      line-height: 24px;
    }
  }

  .hero-multi-template__cta_button_group {
    margin-top: 24px;
  }

  .hero-multi-template__image {
    flex: 1;
    position: relative;
    min-height: 400px;
    background-size: cover;
    background-position: 50% 50%;
    background-repeat: no-repeat;
    background-color: #0024ff;
    overflow: hidden;
  }

  .hero-multi-template__shape {
    position: absolute;
    width: 100%;
    height: 100%;
    background-image: url("https://www.woodmac.com/content/img/branding/hero-template-shape.svg");
    background-size: cover;
    background-position: center;
    opacity: 0.15;
    pointer-events: none;
  }

  @media (max-width: 61.99em) {
    .hero-multi-template__image {
      min-height: 300px;
      width: 100%;
    }
  }
</style>

