---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'div'> {
  title: string;
  id?: string;
}

const { title, id, ...rest } = Astro.props;
---

<div class:list={["module", "left-intro-text"]} id={id} {...rest}>
    <div class="wrap">
        <div class="col small-12 large-6 soft--double-right--large">
            <h2 class="giga title-underline soft--bottom push--bottom" set:html={title}></h2>
        </div>
        <div class="col small-12 large-6">
            <div class="editor push--bottom">
                <slot />
            </div>
        </div>
    </div>
</div>
