---
export interface Props {
  icon: string
  title: string
  description: string
}

const { icon, title, description } = Astro.props

const getIconSvg = (iconName: string) => {
  const icons: Record<string, string> = {
    'team': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>',
    'lightbulb': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>',
    'integration': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>',
  }
  
  return icons[iconName] || icons['team']
}
---

<div class="text-center">
  <div class="w-24 h-24 mx-auto mb-6 rounded-full border-4 border-sick-blue flex items-center justify-center">
    <svg class="w-12 h-12 text-sick-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={getIconSvg(icon)}></svg>
  </div>
  <h3 class="text-2xl font-bold mb-4 text-gray-900">{title}</h3>
  <p class="text-gray-700">{description}</p>
</div>

