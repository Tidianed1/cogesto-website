---
export interface Props {
  title: string
  description: string
  href?: string
  style: 'primary' | 'light' | 'image' | 'default'
  image?: {
    src: string
    alt: string
  }
  className?: string
}

const { title, description, href, style, image, className = '' } = Astro.props

const getCardClasses = () => {
  const baseClasses = 'relative overflow-hidden transition-all duration-300'
  
  switch (style) {
    case 'primary':
      return `${baseClasses} bg-blue-600 text-white p-8 group hover:opacity-90`
    case 'light':
      return `${baseClasses} bg-gray-50 p-8 group hover:bg-gray-100 transition-colors`
    case 'image':
      return `${baseClasses} h-64 md:h-auto group`
    default:
      return `${baseClasses} bg-white p-8 group hover:bg-gray-50 transition-colors`
  }
}
---


{href ? (
  <a href={href} class={`block ${getCardClasses()} ${className}`}>
    {style === 'image' && image ? (
      <img 
        src={image.src} 
        alt={image.alt} 
        class="absolute inset-0 w-full h-full object-cover"
      />
    ) : (
      <>
        <h3 class="text-4xl md:text-5xl font-bold mb-3">{title}</h3>
        <p class={style === 'primary' ? 'text-white/90' : 'text-base md:text-lg text-gray-700 mb-12'}>
          {description}
        </p>
        {style !== 'primary' && (
          <div class="absolute bottom-8 right-8">
            <span class="text-2xl">→</span>
          </div>
        )}
      </>
    )}
  </a>
) : (
  <div class={`${getCardClasses()} ${className}`}>
    {style === 'image' && image ? (
      <img 
        src={image.src} 
        alt={image.alt} 
        class="absolute inset-0 w-full h-full object-cover"
      />
    ) : (
      <>
        <h3 class="text-4xl md:text-5xl font-bold mb-3">{title}</h3>
        <p class={style === 'primary' ? 'text-white/90' : 'text-base md:text-lg text-gray-700 mb-12'}>
          {description}
        </p>
        {style !== 'primary' && (
          <div class="absolute bottom-8 right-8">
            <span class="text-2xl">→</span>
          </div>
        )}
      </>
    )}
  </div>
)}
