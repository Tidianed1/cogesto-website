---
export interface Props {
  iconUrl?: string;
  heading: string;
  text: string;
}

const { iconUrl, heading, text } = Astro.props;
---

<div class="text-center">
  <div class="flex justify-center mb-4">
    {iconUrl ? (
      <img 
        src={iconUrl} 
        alt={heading}
        class="w-16 h-16 object-contain"
      />
    ) : (
      <div class="w-16 h-16 bg-sick-blue rounded-full flex items-center justify-center">
        <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
        </svg>
      </div>
    )}
  </div>
  
  <h3 class="text-xl font-bold text-sick-navy mb-3">
    {heading}
  </h3>
  
  <p class="text-sick-gray leading-relaxed">
    {text}
  </p>
</div>