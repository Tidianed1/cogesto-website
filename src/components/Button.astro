---
export interface Props {
  variant?: 'primary' | 'secondary' | 'text'
  size?: 'sm' | 'md' | 'lg'
  href?: string
  children: any
}

const { variant = 'primary', size = 'md', href, children } = Astro.props

const getButtonClasses = () => {
  const baseClasses = 'inline-flex items-center justify-center font-medium rounded-md transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2'
  
  const variantClasses = {
    primary: 'bg-sick-blue text-white hover:bg-blue-600 focus:ring-sick-blue',
    secondary: 'bg-white text-sick-blue border border-sick-blue hover:bg-sick-light focus:ring-sick-blue',
    text: 'text-sick-blue hover:text-blue-600 focus:ring-sick-blue'
  }
  
  const sizeClasses = {
    sm: 'px-3 py-2 text-sm',
    md: 'px-4 py-2 text-base',
    lg: 'px-6 py-3 text-lg'
  }
  
  return `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]}`
}
---

{href ? (
  <a href={href} class={getButtonClasses()}>
    <slot />
  </a>
) : (
  <button class={getButtonClasses()}>
    <slot />
  </button>
)}

