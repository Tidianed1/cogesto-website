---
// Narrow body copy component - matches narrow-body-copy structure from reference
export interface Props {
  leftTitle: string;
  leftParagraph: string;
  rightTitle: string;
  rightParagraph: string;
}

const { leftTitle, leftParagraph, rightTitle, rightParagraph } = Astro.props;
---

<div class="module narrow-body-copy" id="copynarrow">
  <div class="wrap content-container">
    <div class="col left-copy-container">
      <h2 class="h500 core-branding-cobalt">
        <div>{leftTitle}</div>
      </h2>
      <div class="editor core-branding-rich-blue">
        <p>{leftParagraph}</p>
      </div>
    </div>
    <div class="col right-copy-container">
      <h2 class="h500 core-branding-cobalt">
        <div>{rightTitle}</div>
      </h2>
      <div class="editor core-branding-rich-blue">
        <p>{rightParagraph}</p>
      </div>
    </div>
  </div>
</div>

<style>
  /* Exact CSS from dev tools - narrow-body-copy */
  .module.narrow-body-copy {
    padding: 64px 0px 80px;
    color: #010063;
    font-weight: 300;
    line-height: 24px;
  }

  .module.narrow-body-copy .wrap.content-container {
    display: flex;
    flex-direction: row;
    gap: 48px;
  }

  @media (max-width: 61.99em) {
    .module.narrow-body-copy .wrap.content-container {
      flex-direction: column;
      gap: 32px;
    }
  }

  .module.narrow-body-copy .col {
    flex: 1;
  }

  .module.narrow-body-copy .h500 {
    font-family: Manrope, sans-serif;
    font-size: 28px;
    line-height: 32.004px;
    padding: 0px 0px 16px;
    margin: 0;
  }

  .module.narrow-body-copy .h500.core-branding-cobalt {
    color: #0024ff;
  }

  .module.narrow-body-copy .editor {
    font-family: Manrope, sans-serif;
    color: #010063;
    font-weight: 300;
    line-height: 24px;
  }

  .module.narrow-body-copy .editor p {
    font-size: 18px;
    line-height: 28px;
    margin: 0;
  }

  .module.narrow-body-copy .editor.core-branding-rich-blue {
    color: #010063;
  }
</style>

