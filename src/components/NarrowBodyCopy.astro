---
// Narrow body copy component - matches narrow-body-copy structure from reference
export interface Props {
  leftTitle: string;
  leftParagraph: string;
  rightTitle: string;
  rightParagraph: string;
}

const { leftTitle, leftParagraph, rightTitle, rightParagraph } = Astro.props;
---

<div class="module narrow-body-copy" id="copynarrow">
  <div class="wrap content-container">
    <div class="col left-copy-container">
      <h2 class="h500 core-branding-cobalt" set:html={leftTitle}></h2>
      <div class="editor core-branding-rich-blue" set:html={leftParagraph}>
      </div>
    </div>
    <div class="col right-copy-container">
      <h2 class="h500 core-branding-cobalt" set:html={rightTitle}>
      </h2>
      <div class="editor core-branding-rich-blue" set:html={rightParagraph}>
      </div>
    </div>
  </div>
</div>
