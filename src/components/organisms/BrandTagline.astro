---
import Logo from '../atoms/Logo.astro'

export interface Props {
  logoSrc: string
  tagline: string
}

const { logoSrc, tagline } = Astro.props
---

<div class="bg-blue-600 border-t border-white/20 px-8 md:px-16 lg:px-24 py-12">
  <div class="flex items-center">
    <Logo src={logoSrc} alt="Company Logo" className="h-16 mr-8" />
    <span class="text-white text-2xl md:text-3xl font-light">{tagline}</span>
  </div>
</div>

