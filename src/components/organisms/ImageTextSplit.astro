---
export interface Props {
  kicker: string
  heading: string
  text: string
  image: {
    src: string
    alt: string
  }
  ctaButton: {
    text: string
    href: string
  }
  imagePosition: 'left' | 'right'
  backgroundColor?: 'blue-900' | 'gray-50' | 'white'
}

const { kicker, heading, text, image, ctaButton, imagePosition, backgroundColor = 'blue-900' } = Astro.props

const getBackgroundClass = () => {
  switch (backgroundColor) {
    case 'blue-900':
      return 'bg-blue-900 text-white'
    case 'gray-50':
      return 'bg-gray-50'
    case 'white':
      return 'bg-white'
    default:
      return 'bg-blue-900 text-white'
  }
}

const getTextColorClass = () => {
  switch (backgroundColor) {
    case 'blue-900':
      return 'text-white/90'
    case 'gray-50':
    case 'white':
      return 'text-gray-700'
    default:
      return 'text-white/90'
  }
}
---

<section class={getBackgroundClass()}>
  <div class="grid md:grid-cols-2 min-h-[600px]">
    {imagePosition === 'left' ? (
      <>
        <div class="relative h-[50vh] md:h-auto">
          <img 
            src={image.src} 
            alt={image.alt} 
            class="absolute inset-0 w-full h-full object-cover"
          />
        </div>
        <div class="px-8 md:px-12 lg:px-16 xl:px-24 py-16 md:py-20 flex flex-col justify-center">
          <div class="space-y-6 max-w-2xl">
            <p class="text-base md:text-lg font-semibold uppercase tracking-[0.25em]">{kicker}</p>
            <h2 class="text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-bold leading-[1.1]">
              {heading}
            </h2>
            <p class="text-xl md:text-2xl lg:text-3xl leading-relaxed">
              {text}
            </p>
            <div class="pt-8">
              <a 
                href={ctaButton.href} 
                class="inline-flex items-center px-10 py-5 text-xl bg-blue-600 text-white font-semibold rounded-full hover:bg-blue-700 transition-colors"
              >
                {ctaButton.text}
                <span class="ml-2">→</span>
              </a>
            </div>
          </div>
        </div>
      </>
    ) : (
      <>
        <div class="p-8 md:p-16 lg:p-24 flex flex-col justify-center">
          <p class="text-sm font-semibold mb-4 uppercase tracking-wider">{kicker}</p>
          <h2 class="text-3xl md:text-4xl font-bold mb-6">
            {heading}
          </h2>
          <p class={`text-lg mb-8 ${getTextColorClass()}`}>
            {text}
          </p>
          <div>
            <a 
              href={ctaButton.href} 
              class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-semibold rounded-full hover:bg-blue-600 transition-colors"
            >
              {ctaButton.text}
              <span class="ml-2">→</span>
            </a>
          </div>
        </div>
        <div class="relative h-[50vh] md:h-auto">
          <img 
            src={image.src} 
            alt={image.alt} 
            class="absolute inset-0 w-full h-full object-cover"
          />
        </div>
      </>
    )}
  </div>
</section>

