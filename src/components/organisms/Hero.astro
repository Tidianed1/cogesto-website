---
export interface Props {
  kicker: string
  heading: string
  subheading: string
  backgroundImage: {
    src: string
    alt: string
  }
  logoSrc: string
  tagline: string
}

const { kicker, heading, subheading, backgroundImage, logoSrc, tagline } = Astro.props
---

<section class="relative bg-blue-600 overflow-hidden">
  <div class="grid grid-cols-1 md:grid-cols-2 h-[56.25vw] max-h-[calc(100vh-4rem)] min-h-[500px]">
    <!-- Content Side (Merged Hero + Brand) -->
    <div class="relative z-10 px-8 md:px-12 lg:px-16 xl:px-24 py-16 md:py-20 flex flex-col justify-center">
      <div class="space-y-6">
        <!-- Kicker -->
        <p class="text-white/80 text-sm md:text-base font-semibold uppercase tracking-widest">
          {kicker}
        </p>
        
        <!-- Main Headline (Was Hero heading) -->
        <h1 class="text-white text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-bold leading-[1.1] tracking-tight">
          {heading}
        </h1>
        
        <!-- Subheading -->
        <p class="text-white/90 text-xl md:text-2xl lg:text-3xl leading-relaxed max-w-2xl">
          {subheading}
        </p>
        
        <!-- BRAND TAGLINE INTEGRATED HERE (like "SICK Sensor Intelligence") -->
        <div class="flex items-center gap-6 pt-12 border-t border-white/20">
          <img src={logoSrc} alt="Cogesto" class="h-16 md:h-20" />
          <span class="text-white text-2xl md:text-3xl lg:text-4xl font-light tracking-wide">
            {tagline}
          </span>
        </div>
      </div>
    </div>

    <!-- Right: Hero Image -->
    <div class="relative h-[50vh] md:h-auto">
      <img 
        src={backgroundImage.src}
        alt={backgroundImage.alt}
        class="absolute inset-0 w-full h-full object-cover"
        loading="eager"
      />
      <div class="absolute inset-0 bg-gradient-to-l from-blue-600/30 to-transparent"></div>
    </div>
  </div>
</section>

