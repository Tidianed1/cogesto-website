---
export interface Props {
  kicker: string
  heading: string
  text: string
  links: Array<{
    text: string
    href: string
  }>
}

const { kicker, heading, text, links } = Astro.props
---

<section class="bg-white py-16 md:py-20 min-h-[500px]">
  <div class="mx-auto px-8 md:px-12 lg:px-20 xl:px-32">
    <div class="grid md:grid-cols-2 gap-12 md:gap-16">
      
      <!-- Left Column -->
      <div class="space-y-6">
        <p class="text-sm md:text-base font-bold text-blue-600 uppercase tracking-[0.2em]">
          {kicker}
        </p>
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 leading-[1.1]">
          {heading}
        </h2>
        <p class="text-xl md:text-2xl text-gray-700 leading-relaxed">
          {text}
        </p>
      </div>

      <!-- Right Column: Links -->
      <div class="space-y-8">
        {links.map((link) => (
          <a 
            href={link.href} 
            class="group flex items-center justify-between p-4 rounded-lg hover:bg-gray-50 transition-all duration-200 border border-transparent hover:border-gray-200"
          >
            <span class="text-2xl md:text-3xl font-semibold text-gray-900 group-hover:text-blue-600 transition-colors duration-200">{link.text}</span>
            <span class="text-blue-600 text-xl group-hover:translate-x-1 transition-transform duration-200">â†’</span>
          </a>
        ))}
      </div>
    </div>
  </div>
</section>

