---
// Quote section component - blue background left, image right
export interface Props {
  quote: string;
  attribution: string;
  image: {
    src: string;
    alt: string;
  };
}

const { quote, attribution, image } = Astro.props;
---

<section class="quote-section">
  <div class="quote-section__container">
    <div class="quote-section__grid">
      <div class="quote-section__quote">
        <blockquote class="quote-section__text">{quote}</blockquote>
        <cite class="quote-section__attribution">{attribution}</cite>
      </div>
      <div class="quote-section__image">
        <img src={image.src} alt={image.alt} />
      </div>
    </div>
  </div>
</section>

<style>
  /* Quote section styling - matches reference */
  .quote-section {
    width: 100%;
    padding: 64px 0;
    background: #0000ff;
  }

  @media (min-width: 62.5em) {
    .quote-section {
      padding: 96px 0;
    }
  }

  .quote-section__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 16px;
  }

  @media (min-width: 62.5em) {
    .quote-section__container {
      padding: 0 24px;
    }
  }

  .quote-section__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 48px;
    align-items: center;
  }

  @media (min-width: 62.5em) {
    .quote-section__grid {
      grid-template-columns: 1fr 1fr;
      gap: 64px;
    }
  }

  .quote-section__quote {
    display: flex;
    flex-direction: column;
    gap: 24px;
    padding: 48px 0;
  }

  @media (min-width: 62.5em) {
    .quote-section__quote {
      padding: 64px 0;
    }
  }

  .quote-section__text {
    font-size: 1.5rem;
    line-height: 1.5;
    font-weight: 400;
    color: white;
    margin: 0;
    font-style: normal;
    border: none;
    padding: 0;
  }

  @media (min-width: 62.5em) {
    .quote-section__text {
      font-size: 2rem;
      line-height: 1.4;
    }
  }

  @media (min-width: 75em) {
    .quote-section__text {
      font-size: 2.5rem;
    }
  }

  .quote-section__attribution {
    font-size: 1rem;
    line-height: 1.5;
    font-weight: 400;
    color: white;
    font-style: normal;
    display: block;
  }

  @media (min-width: 62.5em) {
    .quote-section__attribution {
      font-size: 1.125rem;
    }
  }

  .quote-section__image {
    width: 100%;
    height: 100%;
    min-height: 400px;
    overflow: hidden;
    border-radius: 8px;
  }

  @media (min-width: 62.5em) {
    .quote-section__image {
      min-height: 500px;
    }
  }

  .quote-section__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  /* Mobile: Image first */
  @media (max-width: 61.99em) {
    .quote-section__grid {
      display: flex;
      flex-direction: column;
    }

    .quote-section__image {
      order: -1;
    }
  }
</style>

