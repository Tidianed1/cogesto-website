---
// Leadership team section - grid of headshots with names and titles
export interface Props {
  title?: string;
  teamMembers: Array<{
    name: string;
    title: string;
    image: string;
    imageAlt?: string;
  }>;
}

const { title = "Leadership team", teamMembers } = Astro.props;
---

<section class="leadership-team-section">
  <div class="leadership-team-section__container">
    <h2 class="leadership-team-section__title">{title}</h2>
    <div class="leadership-team-section__underline"></div>
    <div class="leadership-team-section__grid">
      {teamMembers.map((member) => (
        <div class="leadership-team-section__member">
          <div class="leadership-team-section__image">
            <img src={member.image} alt={member.imageAlt || member.name} />
          </div>
          <div class="leadership-team-section__info">
            <h3 class="leadership-team-section__name">{member.name}</h3>
            <p class="leadership-team-section__title">{member.title}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>



