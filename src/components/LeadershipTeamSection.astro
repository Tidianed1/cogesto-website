---
// Leadership team section - grid of headshots with names and titles
export interface Props {
  title?: string;
  teamMembers: Array<{
    name: string;
    title: string;
    image: string;
    imageAlt?: string;
  }>;
}

const { title = "Leadership team", teamMembers } = Astro.props;
---

<section class="leadership-team-section">
  <div class="leadership-team-section__container">
    <h2 class="leadership-team-section__title">{title}</h2>
    <div class="leadership-team-section__underline"></div>
    <div class="leadership-team-section__grid">
      {teamMembers.map((member) => (
        <div class="leadership-team-section__member">
          <div class="leadership-team-section__image">
            <img src={member.image} alt={member.imageAlt || member.name} />
          </div>
          <div class="leadership-team-section__info">
            <h3 class="leadership-team-section__name">{member.name}</h3>
            <p class="leadership-team-section__title">{member.title}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  /* Leadership team section styling - matches reference */
  .leadership-team-section {
    width: 100%;
    padding: 64px 0;
    background: #ffffff;
  }

  @media (min-width: 62.5em) {
    .leadership-team-section {
      padding: 96px 0;
    }
  }

  .leadership-team-section__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 16px;
  }

  @media (min-width: 62.5em) {
    .leadership-team-section__container {
      padding: 0 24px;
    }
  }

  .leadership-team-section__title {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    color: #0000ff;
    margin: 0 0 16px 0;
  }

  @media (min-width: 62.5em) {
    .leadership-team-section__title {
      font-size: 3.5rem;
    }
  }

  .leadership-team-section__underline {
    width: 48px;
    height: 4px;
    background: #0000ff;
    margin-bottom: 48px;
  }

  @media (min-width: 62.5em) {
    .leadership-team-section__underline {
      margin-bottom: 64px;
    }
  }

  .leadership-team-section__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 32px;
  }

  @media (min-width: 48em) {
    .leadership-team-section__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 48px;
    }
  }

  @media (min-width: 62.5em) {
    .leadership-team-section__grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 32px;
    }
  }

  .leadership-team-section__member {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .leadership-team-section__image {
    width: 100%;
    aspect-ratio: 1;
    overflow: hidden;
    border-radius: 0;
    background: #f5f5f5;
  }

  .leadership-team-section__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .leadership-team-section__info {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .leadership-team-section__name {
    font-size: 1.125rem;
    font-weight: 700;
    line-height: 1.3;
    color: #2d2d2d;
    margin: 0;
  }

  @media (min-width: 62.5em) {
    .leadership-team-section__name {
      font-size: 1.25rem;
    }
  }

  .leadership-team-section__title {
    font-size: 1rem;
    font-weight: 400;
    line-height: 1.5;
    color: #2d2d2d;
    margin: 0;
  }

  @media (min-width: 62.5em) {
    .leadership-team-section__title {
      font-size: 1.125rem;
    }
  }
</style>

