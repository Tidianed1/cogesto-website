---
export interface Props {
  icon: string
  href?: string
  className?: string
}

const { icon, href, className = '' } = Astro.props

const getIconSvg = (iconName: string) => {
  const icons: Record<string, string> = {
    'search': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>',
    'globe': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>',
    'heart': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>',
    'cart': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>',
    'user': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>',
  }
  
  return icons[iconName] || icons['search']
}
---

{href ? (
  <a href={href} class={`text-gray-700 hover:text-sick-blue transition-colors ${className}`}>
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={getIconSvg(icon)}></svg>
  </a>
) : (
  <button class={`text-gray-700 hover:text-sick-blue transition-colors ${className}`}>
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={getIconSvg(icon)}></svg>
  </button>
)}

