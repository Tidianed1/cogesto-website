---
export interface Props {
  variant?: 'filled' | 'outlined' | 'text'
  size?: 'small' | 'medium' | 'large'
  color?: 'primary' | 'secondary' | 'white'
  disabled?: boolean
  type?: 'button' | 'submit' | 'reset'
  href?: string
  class?: string
  icon?: 'prefix' | 'suffix' | 'only'
}

const {
  variant = 'filled',
  size = 'medium',
  color = 'primary',
  disabled = false,
  type = 'button',
  href,
  class: className = '',
  icon,
} = Astro.props

const baseClasses = 'inline-flex items-center justify-center font-semibold transition-all duration-250 ease-out rounded-full focus-visible:ring-2 focus-visible:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed'

const sizeClasses = {
  small: 'px-4 py-2 text-sm',
  medium: 'px-6 py-3 text-base',
  large: 'px-8 py-4 text-lg',
}

const variantClasses = {
  filled: {
    primary: 'bg-blue-600 text-white hover:bg-blue-700 active:bg-blue-800',
    secondary: 'bg-blue-900 text-white hover:bg-blue-800 active:bg-blue-900',
    white: 'bg-white text-blue-900 hover:bg-gray-50 active:bg-gray-100',
  },
  outlined: {
    primary: 'border-2 border-blue-600 text-blue-600 hover:bg-blue-600 hover:text-white',
    secondary: 'border-2 border-blue-900 text-blue-900 hover:bg-blue-900 hover:text-white',
    white: 'border-2 border-white text-white hover:bg-white hover:text-blue-900',
  },
  text: {
    primary: 'text-blue-600 hover:bg-blue-600/10',
    secondary: 'text-blue-900 hover:bg-blue-900/10',
    white: 'text-white hover:bg-white/10',
  },
}

const buttonClasses = `${baseClasses} ${sizeClasses[size]} ${variantClasses[variant][color]} ${className}`
---

{href ? (
  <a href={href} class={buttonClasses} role="button">
    <slot />
  </a>
) : (
  <button type={type} class={buttonClasses} disabled={disabled}>
    <slot />
  </button>
)}
