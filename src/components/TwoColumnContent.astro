---
// Two-column content component - reusable for image/text sections
export interface Props {
  title: string;
  paragraphs: string[];
  image?: {
    src: string;
    alt: string;
    position?: 'left' | 'right';
  };
  ctaButtons?: Array<{
    text: string;
    href: string;
    variant?: 'primary' | 'secondary';
  }>;
  backgroundColor?: 'white' | 'light';
  imagePosition?: 'left' | 'right';
}

const { 
  title, 
  paragraphs, 
  image, 
  ctaButtons = [], 
  backgroundColor = 'white',
  imagePosition = 'right'
} = Astro.props;

const bgColor = backgroundColor === 'white' ? '#ffffff' : '#f5f5f5';
const textColor = '#2d2d2d';
---

<section class="two-column-content" style={`background-color: ${bgColor}; color: ${textColor};`}>
  <div class="two-column-content__container">
    <div class="two-column-content__grid">
      {imagePosition === 'left' && image && (
        <div class="two-column-content__image">
          <img src={image.src} alt={image.alt} />
        </div>
      )}
      
      <div class="two-column-content__text">
        <h2 class="two-column-content__title">{title}</h2>
        {paragraphs.map((paragraph) => (
          <p class="two-column-content__paragraph">{paragraph}</p>
        ))}
        {ctaButtons.length > 0 && (
          <div class="two-column-content__cta">
            {ctaButtons.map((button) => (
              <a 
                href={button.href} 
                class={`two-column-content__button two-column-content__button--${button.variant || 'primary'}`}
              >
                {button.text}
                <span class="two-column-content__arrow">â†’</span>
              </a>
            ))}
          </div>
        )}
      </div>

      {imagePosition === 'right' && image && (
        <div class="two-column-content__image">
          <img src={image.src} alt={image.alt} />
        </div>
      )}
    </div>
  </div>
</section>

<style>
  /* Two-column content styling - matches reference */
  .two-column-content {
    width: 100%;
    padding: 64px 0;
  }

  @media (min-width: 62.5em) {
    .two-column-content {
      padding: 96px 0;
    }
  }

  .two-column-content__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 16px;
  }

  @media (min-width: 62.5em) {
    .two-column-content__container {
      padding: 0 24px;
    }
  }

  .two-column-content__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 48px;
    align-items: center;
  }

  @media (min-width: 62.5em) {
    .two-column-content__grid {
      grid-template-columns: 1fr 1fr;
      gap: 64px;
    }
  }

  .two-column-content__image {
    width: 100%;
    height: 100%;
    min-height: 400px;
    overflow: hidden;
    border-radius: 8px;
  }

  @media (min-width: 62.5em) {
    .two-column-content__image {
      min-height: 500px;
    }
  }

  .two-column-content__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .two-column-content__text {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .two-column-content__title {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    color: #0000ff;
    margin: 0;
  }

  @media (min-width: 62.5em) {
    .two-column-content__title {
      font-size: 3.5rem;
    }
  }

  .two-column-content__paragraph {
    font-size: 1.125rem;
    line-height: 1.7;
    color: #2d2d2d;
    margin: 0;
  }

  @media (min-width: 62.5em) {
    .two-column-content__paragraph {
      font-size: 1.25rem;
    }
  }

  .two-column-content__cta {
    display: flex;
    flex-direction: row;
    gap: 16px;
    flex-wrap: wrap;
    margin-top: 8px;
  }

  .two-column-content__button {
    display: inline-flex;
    align-items: center;
    padding: 14px 28px;
    font-size: 16px;
    font-weight: 600;
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .two-column-content__button--primary {
    background: #a3ff85;
    color: #1a1a1a;
  }

  .two-column-content__button--primary:hover {
    background: #92ee74;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(163, 255, 133, 0.3);
  }

  .two-column-content__button--secondary {
    background: transparent;
    color: #0000ff;
    border: 2px solid #0000ff;
  }

  .two-column-content__button--secondary:hover {
    background: #0000ff;
    color: white;
  }

  .two-column-content__arrow {
    margin-left: 8px;
    display: inline-block;
    transition: transform 0.3s ease;
  }

  .two-column-content__button:hover .two-column-content__arrow {
    transform: translateX(4px);
  }

  /* Mobile: Image first when image is on left */
  @media (max-width: 61.99em) {
    .two-column-content__grid {
      display: flex;
      flex-direction: column;
    }

    .two-column-content__image {
      order: -1;
    }
  }
</style>

