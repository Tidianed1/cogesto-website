---
import { sanityClient, urlFor } from '../utils/sanityClient'

// Fetch site settings
const siteSettings = await sanityClient.fetch(`*[_type == "siteSettings"][0]`)

export interface Props {
  siteSettings?: any
}

const { siteSettings: propsSiteSettings } = Astro.props
const settings = propsSiteSettings || siteSettings
---

<header class="bg-white shadow-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-6">
      <!-- Logo -->
      <div class="flex-shrink-0">
        {settings?.logo ? (
          <img 
            src={urlFor(settings.logo).width(200).url()} 
            alt={settings.logo.alt || settings.title || 'Cogesto Consulting'}
            class="h-8 w-auto"
          />
        ) : (
          <h1 class="text-2xl font-bold text-sick-blue">Cogesto Consulting</h1>
        )}
      </div>
      
      <!-- Navigation -->
      <nav class="hidden md:flex space-x-8">
        <a href="/" class="text-sick-navy hover:text-sick-blue transition-colors">Home</a>
        <a href="/services" class="text-sick-navy hover:text-sick-blue transition-colors">Services</a>
        <a href="/about" class="text-sick-navy hover:text-sick-blue transition-colors">About</a>
        <a href="/case-studies" class="text-sick-navy hover:text-sick-blue transition-colors">Case Studies</a>
        <a href="/contact" class="text-sick-navy hover:text-sick-blue transition-colors">Contact</a>
      </nav>
      
      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button type="button" class="text-sick-navy hover:text-sick-blue">
          <span class="sr-only">Open main menu</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>
</header>

