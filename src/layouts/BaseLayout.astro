---
import '../styles/styles.css';
import '../styles/components.css';

export interface Props {
  title?: string
  description?: string
  children: any
}

const { title = 'Cogesto Consulting', description = 'Professional consulting services', children } = Astro.props;

// This logic determines if we are on a page that uses the video hero
const isLandingPage = Astro.url.pathname.includes('/new_index') || Astro.url.pathname.includes('/homepage-video-hero');
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/inline.css">
    
    {isLandingPage && (
      <Fragment>
        <link rel="stylesheet" href="/styles/video-hero.css" />
        <link rel="stylesheet" href="/styles/header-transparency.css" />
      </Fragment>
    )}
    <slot name="head" />
  </head>
  <body class:list={[ "font-sans antialiased", { "landing-page": isLandingPage } ]}>
    <slot />

    <script>
      import { initializeNavigation } from '../lib/navigation.js';
      document.addEventListener('DOMContentLoaded', () => {
        initializeNavigation();
      });
    </script>
    
    {isLandingPage && (
      <script is:inline>
        document.addEventListener('DOMContentLoaded', () => {
          const header = document.getElementById('menu-header');
          const body = document.body;

          if (header && body.classList.contains('landing-page')) {
            const handleScroll = () => {
              if (window.scrollY > 50) {
                header.classList.add('scrolled');
                body.classList.add('has-scrolled-header');
              } else {
                header.classList.remove('scrolled');
                body.classList.remove('has-scrolled-header');
              }
            };

            const handleMouseEnter = () => {
                header.classList.add('hovered');
            };

            const handleMouseLeave = () => {
                header.classList.remove('hovered');
            };
            
            // Run on load to set initial state
            handleScroll();
            
            // Listen for events
            window.addEventListener('scroll', handleScroll, { passive: true });
            header.addEventListener('mouseenter', handleMouseEnter);
            header.addEventListener('mouseleave', handleMouseLeave);
          }
        });
      </script>
    )}
  </body>
</html>
