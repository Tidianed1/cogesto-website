---
export interface Props {
  kicker?: string
  heading: string
  text?: string
  navLinks?: Array<{
    text: string
    url: string
  }>
}

const { kicker, heading, text, navLinks } = Astro.props
---

<section class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div>
        {kicker && (
          <p class="text-sm font-semibold text-sick-blue uppercase tracking-wide mb-4">
            {kicker}
          </p>
        )}
        
        <h2 class="text-3xl sm:text-4xl font-bold text-sick-navy mb-6">
          {heading}
        </h2>
        
        {text && (
          <p class="text-lg text-sick-gray mb-8 leading-relaxed">
            {text}
          </p>
        )}
      </div>
      
      <!-- Navigation Links -->
      {navLinks && navLinks.length > 0 && (
        <div class="space-y-4">
          <h3 class="text-xl font-semibold text-sick-navy mb-6">Quick Links</h3>
          <ul class="space-y-3">
            {navLinks.map((link) => (
              <li>
                <a 
                  href={link.url}
                  class="flex items-center text-sick-gray hover:text-sick-blue transition-colors group"
                >
                  <span class="mr-3 text-sick-blue group-hover:mr-4 transition-all">
                    â†’
                  </span>
                  {link.text}
                </a>
              </li>
            ))}
          </ul>
        </div>
      )}
    </div>
  </div>
</section>

