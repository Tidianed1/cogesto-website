---
import { urlFor } from '../utils/sanityClient'

export interface Props {
  image: any
  imagePosition?: 'left' | 'right'
  kicker?: string
  heading: string
  text?: any[]
  ctaButton?: {
    text: string
    url: string
  }
}

const { image, imagePosition = 'left', kicker, heading, text, ctaButton } = Astro.props
---

<section class="py-16 bg-sick-light">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class={`grid grid-cols-1 lg:grid-cols-2 gap-12 items-center ${imagePosition === 'right' ? 'lg:grid-flow-col-dense' : ''}`}>
      <!-- Image -->
      <div class={imagePosition === 'right' ? 'lg:col-start-2' : ''}>
        <img 
          src={urlFor(image).width(800).height(600).url()} 
          alt={image.alt || ''}
          class="w-full h-auto rounded-lg shadow-lg"
        />
      </div>
      
      <!-- Content -->
      <div class={imagePosition === 'right' ? 'lg:col-start-1 lg:row-start-1' : ''}>
        {kicker && (
          <p class="text-sm font-semibold text-sick-blue uppercase tracking-wide mb-4">
            {kicker}
          </p>
        )}
        
        <h2 class="text-3xl sm:text-4xl font-bold text-sick-navy mb-6">
          {heading}
        </h2>
        
        {text && (
          <div class="text-lg text-sick-gray mb-8 leading-relaxed prose prose-lg max-w-none">
            <!-- Rich text content would be rendered here -->
            <p>{text}</p>
          </div>
        )}
        
        {ctaButton && (
          <div class="mt-8">
            <a 
              href={ctaButton.url}
              class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-sick-blue hover:bg-blue-600 transition-colors duration-200"
            >
              {ctaButton.text}
            </a>
          </div>
        )}
      </div>
    </div>
  </div>
</section>

